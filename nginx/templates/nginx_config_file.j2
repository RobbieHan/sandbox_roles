user {{ nginx_user }};
worker_processes  {{ ansible_processor_vcpus }};
events {
    worker_connections  102400;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    log_format main '$remote_addr $http_X_Forwarded_For [$time_local] '  
                     '$upstream_addr $upstream_response_time '  
                     '$http_host $request '  
                     '"$status" $body_bytes_sent "$http_referer" '  
                     '"$http_accept_language" "$http_user_agent" '; 
    sendfile        on;
    tcp_nopush      on; 
    tcp_nodelay     on;
    server_tokens  off;
    keepalive_timeout  65;

    
  {% for key, value in nginx_revproxy_sites.items() %}
    {% if key == ansible_host %}
    upstream {{ value.desc }}_backend {
        {% for upstream in value.upstreams %}
           server {{ upstream.address }}:{{ upstream.port }}
        {% endfor %}
    } 
    server {
        listen       {{ listen_port | default:80 }};
        server_name  {{ value.domains | join:" " }};
        access_log  logs/access.log  main;
        location / {

            {% if value.ssl_status %}
                return    301  https://$server_name$request_url;
            {% else %}
                proxy_pass http://{{ value.desc }}_backend;
            {% endif %}
            }
        }
    }
    
    {% if value.ssl_status %}
    server {
        listen       {{ listen_ssl_port | default:443 }} ssl;
        server_name  {{ value.domains | join:" " }};
        ssl_certificate  {{ value.ssl_crt }};
        ssl_certificate_key {{ value.ssl_key }};
                ssl_session_timeout 50m;
                ssl_protocols TLSv1.2;
                ssl_ciphers AESGCM:ALL:!DH:!EXPORT:!RC4:+HIGH:!MEDIUM:!LOW:!aNULL:!eNULL;
                ssl_prefer_server_ciphers on;
        access_log  logs/access.log  main;
        location / {
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_request_buffering off;
                proxy_ignore_client_abort on;
                proxy_pass   https://{{ value.desc }};
        }
    }
    {% endif %}
    {% else %}
    server {
        listen       80;
        server_name  localhost;
        location / {
            root   html;
            index  index.html index.htm;
        }
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }
    }
    {% endif %} 
 {% endfor %}
}
